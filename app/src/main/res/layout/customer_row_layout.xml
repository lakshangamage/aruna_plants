<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="110dp"
    android:gravity="center_vertical"
    android:layout_margin="5dp"
    android:background="@color/colorCustomerBackground"
    >
    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/contact_icon"
        android:layout_gravity="left"
        android:src="@drawable/user_icon"
        app:siBorderWidth="2dp"
        app:siBorderColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customer_name"
        android:text="Customer Name"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/contact_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/collect_btn"
        android:text="Collect"
        android:textAllCaps="false"
        android:gravity="center"
        android:background="@drawable/rounded_corner_for_button"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nic_txt"
        android:text="934578457v"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/contact_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_below="@id/customer_name"
        android:textSize="14dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mobile_txt"
        android:text="077xxxxxxx"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/contact_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_above="@id/address_txt"
        android:textSize="14dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address_txt"
        android:text="No.32, Galle Road, Colombo 03"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/contact_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_alignParentBottom="true"
        android:textSize="14dp"
        />

