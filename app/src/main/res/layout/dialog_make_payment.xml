<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner_for_dialog"
                android:paddingLeft="34dp"
                android:paddingRight="34dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/contact_icon"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_icon_dark"
                    app:siBorderWidth="2dp"
                    app:siBorderColor="@color/colorPrimaryDark"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Customer Name"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/contact_icon"
                    />

                <TextView
                    android:id="@+id/nic_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="921454785v"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/name_txt"
                    />

                <TextView
                    android:id="@+id/mobile_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="07xxxxxxxx"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/nic_txt"
                    />

                <TextView
                    android:id="@+id/address_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="No. 13, Galle Road, Colombo 03."
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/mobile_txt"
                    />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_lay_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/rounded_corner_for_input_dark"
                    android:layout_below="@id/address_txt"
                    android:theme="@style/EditTextHint">
                    <EditText android:id="@+id/input_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ellipsize="end"
                        android:hint="Date"
                        android:imeOptions="actionDone"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:focusable="false"
                        android:background="@android:color/white"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_lay_trans_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/rounded_corner_for_input_dark"
                    android:layout_below="@id/input_lay_date"
                    android:theme="@style/EditTextHint">
                    <EditText android:id="@+id/input_trans_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Transaction ID"
                        android:imeOptions="actionDone"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@android:color/white"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_lay_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/rounded_corner_for_input_dark"
                    android:layout_below="@id/input_lay_trans_id"
                    android:theme="@style/EditTextHint">
                    <EditText android:id="@+id/input_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Amount"
                        android:imeOptions="actionDone"
                        android:ellipsize="end"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@android:color/transparent" />
                </android.support.design.widget.TextInputLayout>
                <RelativeLayout
                    android:id="@+id/btn_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/input_lay_amount"
                    android:layout_centerHorizontal="true">

                </RelativeLayout>
                <Button
                    android:id="@+id/confirm_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_corner_for_button_dark"
                    android:text="Confirm"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/input_lay_amount"
                    android:layout_centerHorizontal="true"/>
                <LinearLayout
                    android:layout_below="@id/confirm_btn"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/cancel_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|right"
                android:clickable="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/dialog_close_icon" />
        </FrameLayout>
    </RelativeLayout>
</ScrollView>