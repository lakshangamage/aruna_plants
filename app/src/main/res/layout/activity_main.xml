<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:officer_id="@+officer_id/drawer_layout"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_image"
        android:clipToPadding="false">
        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:officer_id="@+officer_id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/colorPrimaryDark"
            android:fitsSystemWindows="true"
            android:elevation="4dp">
            <EditText
                android:officer_id="@+officer_id/search_txt"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Search"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="25dp"
                android:drawablePadding="10dp"
                android:background="@drawable/rounded_corner_for_button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Add Customer"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:paddingTop="6dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/rounded_corner_for_button_2"/>
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/transparent">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:officer_id="@+officer_id/customers_recycler_view">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:officer_id="@+officer_id/navogation_view"
        android:layout_gravity ="start"
        app:menu="@menu/drawer_menu"
        android:fitsSystemWindows="true"
        app:itemTextColor="@color/colorPrimaryDark"
        android:background="@color/white">
        <RelativeLayout
            android:officer_id="@+officer_id/mLyout"
            android:layout_marginTop="30dp"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
        </RelativeLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
